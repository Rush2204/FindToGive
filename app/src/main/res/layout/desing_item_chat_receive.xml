<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Foto de perfil"
        tools:src="@drawable/logo_findtogive" />

    <!-- Bubble de mensaje recibido -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:background="@drawable/chat_bubble_receive"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:orientation="vertical">

        <!-- Mensaje -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:ellipsize="none"
            android:maxLines="100"
            tools:text="Este es un mensaje que recibes" />

        <!-- Hora -->
        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#666666"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            tools:text="14:30" />

    </LinearLayout>

    <!-- Espacio flexible para alinear a la izquierda -->
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
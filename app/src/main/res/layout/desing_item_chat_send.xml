<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <!-- Layout para mensajes enviados (alineados a la derecha) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/chat_bubble_send"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Mensaje - CAMBIO IMPORTANTE: match_parent y breakStrategy -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:ellipsize="none"
            android:maxLines="100"
            tools:text="Este es un mensaje que envÃ­as" />

        <!-- Hora -->
        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#CCFFFFFF"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            tools:text="14:30" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
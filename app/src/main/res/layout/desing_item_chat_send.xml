<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal">

    <!-- Espacio flexible para alinear a la derecha -->
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bubble de mensaje enviado -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:background="@drawable/chat_bubble_send"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:orientation="vertical">

        <!-- Mensaje -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:ellipsize="none"
            android:maxLines="100"
            tools:text="Este es un mensaje que envías" />

        <!-- Contenedor para hora y estado de leído -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Hora -->
            <TextView
                android:id="@+id/text_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:layout_marginEnd="4dp"
                tools:text="14:30" />

            <!-- Estado de leído -->
            <TextView
                android:id="@+id/text_leido_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check"
                android:textSize="10sp"
                android:textColor="#4CAF50"
                tools:text="✓✓" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
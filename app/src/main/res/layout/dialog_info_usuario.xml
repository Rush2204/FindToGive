<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:elevation="8dp">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/image_foto_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ico_logo_findtogive" />

    <!-- Nombre y apellido -->
    <TextView
        android:id="@+id/text_nombre_completo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Apellido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />

    <!-- Edad -->
    <TextView
        android:id="@+id/text_edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edad: 25 años"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:textColor="#666666" />

    <!-- Tipo de sangre -->
    <TextView
        android:id="@+id/text_tipo_sangre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de sangre: O+"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:textColor="#666666" />

    <!-- Rol -->
    <TextView
        android:id="@+id/text_rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rol: Donante"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#666666" />

    <!-- Botón cerrar -->
    <Button
        android:id="@+id/button_cerrar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Cerrar"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</LinearLayout>
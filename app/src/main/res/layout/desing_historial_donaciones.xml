<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClasesDiseño.HistorialDonaciones">

    <TextView
        android:id="@+id/text_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Historial de Donaciones"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_filter_historial" />

    <!-- Indicador de filtros activos -->
    <TextView
        android:id="@+id/text_filter_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filtros activos"
        android:textSize="12sp"
        android:textColor="#EB255D"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_filter_historial" />

    <!-- Botón de Filtro -->
    <ImageButton
        android:id="@+id/btn_filter_historial"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Filtrar historial"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_search"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e7eb"
        app:layout_constraintTop_toBottomOf="@+id/text_filter_indicator" />

    <!-- 1. Contenedor de la Lista (Visible cuando hay historial) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_historial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbars="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        tools:itemCount="3"
        tools:listitem="@layout/desing_item_historial"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/header_divider"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Contenedor de Estado Vacío (Visible cuando NO hay historial) -->
    <LinearLayout
        android:id="@+id/layout_empty_state_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        tools:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_historial"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_historial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ico_cleaning"
            android:contentDescription="No hay historial" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="¡Aún no has realizado donaciones!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#374151" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="¡Anímate a salvar una vida hoy mismo!"
            android:textColor="#6b7280" />
    </LinearLayout>

    <!-- Barra de Navegación Inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_navegacion"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
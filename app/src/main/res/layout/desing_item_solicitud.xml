<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="#f3f4f6"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/logo_findtogive"
                android:contentDescription="@string/foto_perfil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usuario"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hace_2_horas"
                    android:textColor="#9ca3af"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 2. Título y Descripción -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/t_tulo_de_solicitud"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#DC2626" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/descripci_n_de_la_solicitud"
            android:textColor="#374151"
            android:textSize="14sp" />

        <!-- 3. IMAGEN ADJUNTA - SIMPLE Y FUNCIONAL -->
        <ImageView
            android:id="@+id/img_adjunta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#f5f5f5"
            android:visibility="gone"
            android:contentDescription="@string/imagen_adjunta"
            tools:visibility="visible" />

        <!-- 4. Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_blood_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/badge_background_red"
                android:text="@string/o"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- En la sección del footer, modifica el TextView de ubicación: -->
            <TextView
                android:id="@+id/text_location_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="40dp"
                android:padding="4dp"
                android:text="@string/santa_ana"
                android:textColor="#2563EB"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnchatear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chatear"
                android:backgroundTint="#4b5563"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
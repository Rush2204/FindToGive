<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClasesDiseño.PerfilUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Botón de Configuración/Ajustes -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ajustes"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
            <!--            android:src="@drawable/ic_settings"-->

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Imagen de Perfil y Botón de Edición Rápida -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_profile_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title">

                <!-- Imagen de Perfil (usando 'foto_url' de la BD) -->
                <!-- Nota: 'de.hdodenhof.circleimageview.CircleImageView' necesita la librería en Gradle -->
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_findtogive"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <!--                android:src="@drawable/ic_default_user_large"-->

                <!-- Badge o Botón para cambiar foto -->
                <ImageButton
                    android:id="@+id/btn_edit_photo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Editar Foto"
                    android:elevation="4dp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                    app:layout_constraintEnd_toEndOf="@+id/img_profile"
                    tools:ignore="TouchTargetSizeCheck"
                    app:srcCompat="@android:drawable/ic_menu_camera"/>
                <!--                android:src="@drawable/ic_camera_edit"-->
                <!--                android:background="@drawable/badge_background_red"-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Nombre de Usuario (nombre + apellido de la BD) -->
            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_profile_header"
                tools:text="Nombre y Apellido del Usuario" />

            <!-- Tipo de Sangre como Badge (tiposangreid de la BD) -->
            <TextView
                android:id="@+id/text_blood_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="O+"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_user_name" />
            <!--            android:background="@drawable/badge_background_red"-->

            <!-- Sección Información Personal y Contacto -->
            <TextView
                android:id="@+id/label_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Información y Contacto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_blood_type_badge" />

            <!-- Contenedor de Información (Card) -->
            <LinearLayout
                android:id="@+id/layout_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/label_details_title">
                <!--                android:background="@drawable/info_card_background"-->

                <!-- 1. Email (email de la BD) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_display_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textColor="#374151"
                    tools:text="correo@ejemplo.com" />


                <!-- 2. Edad (edad de la BD) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Edad"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_display_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textColor="#374151"
                    tools:text="30 años" />


                <!-- 3. Teléfono (telefono de la BD) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Teléfono"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_display_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textColor="#374151"
                    tools:text="7777-7777" />


                <!-- 4. Ubicación (ubicacion de la BD) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ubicación"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_display_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textColor="#374151"
                    tools:text="Ubicación registrada en la BD" />
            </LinearLayout>

            <!-- Sección Rol de Usuario -->
            <TextView
                android:id="@+id/label_rol_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Rol en FindToGive"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_details_card" />

            <LinearLayout
                android:id="@+id/layout_rol_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/label_rol_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol Asignado"
                    android:textStyle="bold" />

                <!-- Rol (rolid de la BD) -->
                <TextView
                    android:id="@+id/text_display_rol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:textColor="#374151"
                    tools:text="Rol (Donante, Receptor o Ambos)" />
            </LinearLayout>

            <!-- Botón Editar Perfil -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Editar Perfil"
                android:backgroundTint="#2563EB"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/layout_rol_card"
                android:layout_marginBottom="16dp"/>

            <!-- Botón Cerrar Sesión -->
            <Button
                android:id="@+id/btn_logout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:textColor="#DC2626"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Barra de Navegación Inferior (Bottom Navigation Bar) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navegacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--    app:itemIconTint="@color/bottom_nav_color"-->
    <!--    app:itemTextColor="@color/bottom_nav_color"-->

</androidx.constraintlayout.widget.ConstraintLayout>